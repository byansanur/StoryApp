<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.login_register.FragmentLogin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgApp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_dicoding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Welcome Developers"
            android:textStyle="bold"
            android:textColor="@color/blue_dicoding"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/imgApp"
            app:layout_constraintStart_toStartOf="@id/imgApp"
            app:layout_constraintTop_toBottomOf="@id/imgApp" />

        <TextView
            android:id="@+id/tvWelcome2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Create impact and post your story in our platform"
            android:textStyle="normal"
            android:textColor="@color/blue_dicoding"
            android:textSize="16sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sign in"
            android:textStyle="bold"
            android:textColor="@color/blue_dicoding"
            android:textSize="22sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome2" />


        <com.byandev.storyapp.utils.CustomEditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:placeholderText="email"
            app:cardElevation="3dp"
            app:isPassword="false"
            app:showBottomTips="false"
            app:layout_constraintTop_toBottomOf="@id/tvSignIn"/>

        <com.byandev.storyapp.utils.CustomEditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showBottomTips="false"
            app:isPassword="true"
            app:cardElevation="3dp"
            app:placeholderText="password"
            app:cardProgressColor="@color/blue_dicoding"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtEmail" />

        <CheckBox
            android:id="@+id/cbRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            app:layout_constraintTop_toBottomOf="@id/edtPassword"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/blue_dicoding"
            android:backgroundTintMode="src_atop"
            app:layout_constraintTop_toBottomOf="@id/cbRemember"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Register here"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>