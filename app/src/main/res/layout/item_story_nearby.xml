<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageStory"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/black"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1234567890123456789012345"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/imageStory"
        app:layout_constraintStart_toStartOf="@id/imageStory"
        app:layout_constraintEnd_toEndOf="@id/imageStory"/>

</androidx.constraintlayout.widget.ConstraintLayout>