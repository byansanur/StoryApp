<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.byandev.storyapp.utils.ProgressCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        android:id="@+id/cardView">

        <ImageView
            android:src="@drawable/bg_card_active"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/sampleEditText"
                android:minEms="6"
                android:autoSizeTextType="uniform"
                android:theme="@style/SampleEditTextStyle"
                android:text=""/>

        </LinearLayout>

    </com.byandev.storyapp.utils.ProgressCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_tips"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password must be have"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/blue_dicoding"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cap_letter_icon"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCriteria"
            app:srcCompat="@drawable/animated_from_close_to_done"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Upper case"
            android:layout_marginEnd="4dp"
            android:textColor="@color/blue_dicoding"
            tools:ignore="SmallSp"
            app:layout_constraintStart_toEndOf="@id/cap_letter_icon"
            app:layout_constraintTop_toTopOf="@id/cap_letter_icon"
            app:layout_constraintBottom_toBottomOf="@id/cap_letter_icon"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_icon"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cap_letter_icon"
            app:srcCompat="@drawable/animated_from_close_to_done"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:textColor="@color/blue_dicoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="1234"
            android:layout_marginEnd="4dp"
            tools:ignore="SmallSp"
            app:layout_constraintStart_toEndOf="@id/number_icon"
            app:layout_constraintTop_toTopOf="@id/number_icon"
            app:layout_constraintBottom_toBottomOf="@id/number_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/symbol_icon"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/animated_from_close_to_done"
            app:layout_constraintTop_toBottomOf="@id/number_icon"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:textColor="@color/blue_dicoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="!@#$%^"
            android:layout_marginEnd="4dp"
            tools:ignore="SmallSp"
            app:layout_constraintStart_toEndOf="@id/symbol_icon"
            app:layout_constraintTop_toTopOf="@id/symbol_icon"
            app:layout_constraintBottom_toBottomOf="@id/symbol_icon" />

        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/length_icon"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/animated_from_close_to_done"
            app:layout_constraintTop_toBottomOf="@id/symbol_icon"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:textColor="@color/blue_dicoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="6 Character"
            tools:ignore="SmallSp"
            app:layout_constraintStart_toEndOf="@id/length_icon"
            app:layout_constraintTop_toTopOf="@id/length_icon"
            app:layout_constraintBottom_toBottomOf="@id/length_icon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>